<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4E4C4C"
        android:textSize="50dp"
        android:text=""
        android:layout_above="@id/textoutput"
        android:gravity="right"
        android:paddingRight="20dp"
        android:id="@+id/inputtext"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="70dp"
        android:text=""
        android:layout_above="@id/buttons"
        android:gravity="right"
        android:paddingRight="20dp"
        android:id="@+id/textoutput"/>


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp" />
            <ImageView
                android:id="@+id/btn_devide"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_divide"
                android:layout_marginRight="25dp"/>
            <ImageView
                android:layout_width="70dp"
                android:id="@+id/btn_module"
                android:layout_height="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_module"/>

            <ImageView
                android:id="@+id/btn_ac"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_ac" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_7"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_7"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_8"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_8"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_9"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_9"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_multiplication"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_multiplication"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_4"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_4"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_5"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_5"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_6"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_6"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_minus"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_minus" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_1"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/btn_1"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_2"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_2"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="25dp"
                android:id="@+id/btn_3"
                android:background="@drawable/btn_3"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_plus"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_plus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp" />
            <ImageView
                android:layout_width="70dp"
                android:id="@+id/btn_0"
                android:layout_height="70dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_0"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_dot"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_dot"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btn_equal"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_equal"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>